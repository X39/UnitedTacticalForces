<MudMainContent Style="@(Breakpoint is Breakpoint.Sm or Breakpoint.Xs ? string.Empty : "padding-top: 0;")">
    <MudContainer
        MaxWidth="@(Breakpoint is Breakpoint.Sm or Breakpoint.Xs ? MaxWidth.Large : MaxWidth.False)"
        Class="@(Breakpoint is Breakpoint.Sm or Breakpoint.Xs ? "my-16 pt-16" : "px-0")">
        @ChildContent
    </MudContainer>
</MudMainContent>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [CascadingParameter]
    public Breakpoint Breakpoint { get; set; }

}